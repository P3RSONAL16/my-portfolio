---
// Importar el CSS para que Tailwind se compile y se inyecte
import "../styles/global.css";

const { title = "M.A.J - Portfolio" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

  </head>

  <body class="bg-black text-white antialiased overflow-x-hidden">
    <canvas class="fixed z-[-1]"></canvas>
    <slot name="header" />
    <slot />
    <slot name="footer" />

    
    <!-- SCRIPTS (estÃ¡ticos en public/scripts, se ejecutan SOLO en navegador) -->
    <script type="module" src="/my-portfolio/scripts/lenis.js"></script>
    <script type="module" src="/my-portfolio/scripts/3d.js"></script>
    <script type="module" src="/my-portfolio/scripts/gsap-setup.js"></script>
    <script type="module" src="/my-portfolio/scripts/animations/header_off_on.js"></script>

  </body>
</html>
