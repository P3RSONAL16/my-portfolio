<section
  id="contactModal"
  class="contactScreen fixed inset-0 bg-[#110f10ec] backdrop-blur-sm flex justify-center items-center z-[99] opacity-0 invisible hidden">
  <button
    id="closeContact"
    class="close absolute right-0 top-0 text-gray-400 m-12 text-3xl font-bold cursor-pointer z-[999] hover:text-white"
    >&times;</button>

  <div class="contact-content p-5 mt-64 opacity-0 translate-y-12">
    <div class="content flex flex-col md:flex-row justify-center items-center h-screen mx-auto px-12 gap-5 md:gap-[5%]">
      <!-- FORM SECTION -->
      <div class="text-contact perspective-[1200px] w-full md:w-3/5 text-white">
        <h2 class="text-[clamp(1.2rem,2vw,2.2rem)] font-Druck-Bold uppercase font-bold tracking-wider mb-5">Contacto</h2>
        <p class="font-SatoshiVariable text-[clamp(1rem,1.5vw,1.2rem)] mb-8">
          Ponte en contacto conmigo o envíame un correo electrónico directamente a <strong>m2000mariojr@gmail.com</strong>
        </p>


        <!-- FORM -->
        <form id="contactForm" class="flex flex-col gap-4" action="https://formspree.io/f/mnnonqqe" method="POST">
          <input type="text" name="nombre" placeholder="Name" required class="p-3 rounded-md bg-transparent text-white placeholder-white/60 border border-white/30 focus:outline-none focus:ring-2 focus:ring-white focus:border-white transition-colors duration-300"/>

          <input type="email" name="email" placeholder="Email" required class="p-3 rounded-md bg-transparent text-white placeholder-white/60 border border-white/30 focus:outline-none focus:ring-2 focus:ring-white focus:border-white transition-colors duration-300"/>

          <textarea name="mensaje" placeholder="Message" required rows="4" class="p-3 rounded-md bg-transparent text-white placeholder-white/60 border border-white/30 focus:outline-none focus:ring-2 focus:ring-white focus:border-white transition-colors duration-300"></textarea>

          <button type="submit" class="bg-white text-black font-bold py-3 cursor-pointer rounded-md hover:bg-gray-200 transition-colors duration-300">Enviar</button>

        </form>

      </div>
    </div>
  </div>
</section>
